          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Postagens"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Forum",
          "Postagens"
        ],
        "description": "Atualiza os detalhes de uma postagem",
        "parameters": [
          {
            "$ref": "#/components/parameters/Id"
          }
        ],
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
