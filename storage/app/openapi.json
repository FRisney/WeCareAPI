            "$ref": "#/components/responses/Prohibited"
          },
          "409": {
            "description": "Ja cadastrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/AlreadyRegistered"
                }
              }
            }
          }
        }
      }
    },
    "/forum/{id}": {
      "get": {
        "tags": [
