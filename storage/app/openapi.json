        ],
        "description": "Deleta um comentario",
        "parameters": [
          {
            "name": "comment_id",
            "in": "path",
            "required": true,
            "description": "Codigo do comentario",
            "schema": {
              "type": "integer"
            },
            "example": 25
          },
          {
            "name": "post_id",
            "in": "path",
            "required": true,
            "description": "Codigo da postagem",
            "schema": {
              "type": "integer"
            },
            "example": 25
          }
        ],
        "responses": {
          "200": {
            "description": "Comentario deletado com sucesso"
          },
          "403": {
